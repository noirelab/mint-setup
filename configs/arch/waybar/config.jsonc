{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        "clock",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": ["wlr/taskbar"],
    "modules-right": [
        "tray",
        "cpu",
        "memory",
        "temperature"
    ],

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 24,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": []
        }
    },
    "cpu": {
        "format": "Û∞òö {usage}%",
        "tooltip": true,
        "interval": 0.5,
        "on-click": "kitty -e btop"
    },

    "memory": {
        "format": "Û∞çõ {}%",
        "interval": 1,
        "on-click": "kitty -e btop"
    },

    "temperature": {
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Û±ÉÉ", "Û∞îè", "Û±ÉÇ"],
        "on-click": "kitty -e btop"
    },

    "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "separate-outputs": true,
    "rewrite": {
        "(.*) - Mozilla Firefox": "üåé $1",
        "(.*) - Visual Studio Code": "üíª $1",
        "(.*) - Discord": "üí¨ Discord"
    }
}
}
